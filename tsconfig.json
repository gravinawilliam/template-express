{
  "compilerOptions": {
    "allowJs": true,
    "declaration": false,
    "lib": [
      "es2021"
    ],
    "module": "commonjs",
    "noEmit": false,
    "outDir": "./dist",
    "rootDir": "./",
    "sourceMap": true,
    "target": "ES2021",
    "incremental": true,
    "removeComments": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@application/*": [
        "src/application/*"
      ],
      "@domain/*": [
        "src/domain/*"
      ],
      "@models/*": [
        "src/domain/entities/models/*"
      ],
      "@errors/*": [
        "src/domain/entities/errors/*"
      ],
      "@infrastructure/*": [
        "src/infrastructure/*"
      ],
      "@external/*": [
        "src/external/*"
      ],
      "@presentation/*": [
        "src/presentation/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@main/*": [
        "src/main/*"
      ]
    },
    "typeRoots": [
      "../node_modules/@types",
      "node_modules/@types",
      "src/types"
    ],
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": false,
    "listFiles": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "traceResolution": false,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "compileOnSave": true
}
